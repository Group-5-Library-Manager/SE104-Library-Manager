<UserControl x:Class="SE104_Library_Manager.Views.Account.AccountView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:local="clr-namespace:SE104_Library_Manager.Views.Account"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid Margin="20">
            <!--<TextBlock FontSize="100" Text="{Binding CurrentNhanVien.BoPhan.TenBoPhan}"/>-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Border Background="Transparent" 
                    BorderThickness="1"
                    BorderBrush="Black"
                    Grid.ColumnSpan="2"/>
            <Image Source="/Assets/icon_user_black.png"/>
            <TextBlock Text="Quản lý thư viện"
                       Grid.Column="1"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       FontSize="14"
                       Margin="20, 20"/>
            <TextBlock Text="{Binding CurrentVaiTro.TenVaiTro}"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontSize="50"
                       FontWeight="SemiBold"
                       Margin="20, 20"/>
        </Grid>
        <Grid Margin="20, 20, 20, 100" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.3*"/>
            </Grid.RowDefinitions>
            <Border Background="Transparent" 
                    BorderThickness="1" 
                    BorderBrush="Black"
                    Grid.RowSpan="2"/>
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Tên người dùng:" 
                           VerticalAlignment="Center" 
                           Margin="10, 0, 0, 0" 
                           FontSize="14"
                           FontWeight="SemiBold"/>
                <TextBlock Text="Chức vụ:" 
                           VerticalAlignment="Center" 
                           Margin="10, 0, 0, 0" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           Grid.Row="1"/>
                <TextBlock Text="Bộ phận:" 
                           VerticalAlignment="Center" 
                           Margin="10, 0, 0, 0" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           Grid.Row="2"/>
                <TextBlock Text="Bằng cấp:" 
                           VerticalAlignment="Center" 
                           Margin="10, 0, 0, 0" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           Grid.Row="3"/>
                <TextBlock Text="Tên đăng nhập:" 
                           VerticalAlignment="Center" 
                           Margin="10, 0, 0, 0" 
                           FontSize="14"
                           FontWeight="SemiBold"
                           Grid.Row="4"/>

                <TextBlock Text="{Binding CurrentNhanVien.TenNhanVien}" 
                           VerticalAlignment="Center" 
                           Margin="10, 0, 0, 0"
                           FontSize="14"
                           Grid.Row="0"
                           Grid.Column="1"/>
                <TextBlock Text="{Binding CurrentNhanVien.ChucVu.TenChucVu}" 
                           VerticalAlignment="Center" 
                           Margin="10, 0, 0, 0"
                           FontSize="14"
                           Grid.Row="1"
                           Grid.Column="1"/>
                <TextBlock Text="{Binding CurrentNhanVien.BoPhan.TenBoPhan}" 
                           VerticalAlignment="Center" 
                           Margin="10, 0, 0, 0"
                           FontSize="14"
                           Grid.Row="2"
                           Grid.Column="1"/>
                <TextBlock Text="{Binding CurrentNhanVien.BangCap.TenBangCap}" 
                           VerticalAlignment="Center" 
                           Margin="10, 0, 0, 0" 
                           FontSize="14"
                           Grid.Row="3"
                           Grid.Column="1"/>
                <TextBlock Text="{Binding CurrentTaiKhoan.TenDangNhap}" 
                           VerticalAlignment="Center" 
                           Margin="10, 0, 0, 0" 
                           FontSize="14"
                           Grid.Row="4"
                           Grid.Column="1"/>
            </Grid>
            <Button Grid.Row="1"
                    Content="Đổi mật khẩu"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="20, 0"
                    Width="150"
                    Height="40"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Command="{Binding ChangePasswordCommand}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="PART_ShadowHost"
                                        Background="#253251"
                                        CornerRadius="8"
                                        SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black"
                                                          BlurRadius="8"
                                                          ShadowDepth="2"
                                                          Opacity="0.3"/>
                                </Border.Effect>
                            </Border>

                            <Border x:Name="PART_BackgroundHost"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      RecognizesAccessKey="True"/>
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PART_BackgroundHost"
                                            Property="Background"
                                            Value="#3F5281" />
                                <Setter TargetName="PART_ShadowHost"
                                            Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black"
                                                              BlurRadius="12"
                                                              ShadowDepth="4"
                                                              Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PART_BackgroundHost"
                                            Property="Background"
                                            Value="Black" />
                                <Setter TargetName="PART_ShadowHost"
                                            Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black"
                                                              BlurRadius="6"
                                                              ShadowDepth="1"
                                                              Opacity="0.2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsMouseOver" Value="False">
                                <Setter TargetName="PART_ShadowHost"
                                            Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black"
                                                              BlurRadius="8"
                                                              ShadowDepth="2"
                                                              Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</UserControl>
