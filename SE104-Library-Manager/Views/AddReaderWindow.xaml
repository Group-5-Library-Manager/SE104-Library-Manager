<Window x:Class="SE104_Library_Manager.Views.AddReaderWindow"
        x:Name="Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SE104_Library_Manager.Views"
        WindowStartupLocation="CenterOwner"
        FontSize="16"
        mc:Ignorable="d"
        Title="Thêm độc giả" Height="525" Width="450">
    <StackPanel Orientation="Vertical" Margin="20">
        <TextBlock Text="Lập phiếu độc giả"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <TextBlock Text="Tên độc giả:"
                   FontWeight="SemiBold" />
        <Border BorderThickness="0"
                CornerRadius="5"
                Background="#EEEEEE"
                HorizontalAlignment="Stretch"
                Margin="0, 10, 0, 0">
            <TextBox BorderThickness="0"
                     Background="Transparent"
                     Text="{Binding ReaderName}"
                     Padding="8, 4"
                     VerticalContentAlignment="Center"/>
        </Border>

        <Grid Margin="0, 10, 0, 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" 
                        Grid.Column="0"
                        Margin="0, 0, 10, 0">
                <TextBlock Text="Ngày sinh:"
                           FontWeight="SemiBold"/>
                <DatePicker HorizontalAlignment="Stretch"
                            SelectedDate="{Binding BirthDate}"
                            Language="vi-VN"
                            Margin="0, 10, 0, 0"/>
            </StackPanel>

            <StackPanel Orientation="Vertical"
                        Grid.Column="1"
                        Margin="10, 0, 0, 0">

                <TextBlock Text="Loại độc giả: "
                            FontWeight="SemiBold" />

                <Grid Margin="0, 10, 0, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border BorderThickness="0"
                            CornerRadius="5"
                            Background="#EEEEEE"
                            Padding="2"
                            Grid.Column="0">
                        <ComboBox BorderThickness="0"
                                  Padding="8,4"
                                  SelectedItem="{Binding SelectedReaderType}"
                                  ItemsSource="{Binding ReaderTypes}"
                                  SelectedValuePath="MaLoaiDocGia"
                                  DisplayMemberPath="TenLoaiDocGia"
                                  VerticalContentAlignment="Center"/>
                    </Border>

                    <Button Grid.Column="1" Width="30"
                            Margin="10, 0, 0, 0"
                            Command="{Binding AddReaderTypeCommand}">
                        <Image Source="/Assets/icon_add_dark.png"
                               Width="16" Height="16"/>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>

        <TextBlock Text="Địa chỉ:"
                   FontWeight="SemiBold" 
                   Margin="0, 10, 0, 0"/>
        <Border BorderThickness="0"
                CornerRadius="5"
                Background="#EEEEEE"
                HorizontalAlignment="Stretch"
                Margin="0, 10, 0, 0">
            <TextBox BorderThickness="0"
                     Background="Transparent"
                     Padding="8, 4"
                     Text="{Binding Address}"
                     VerticalContentAlignment="Center" />
        </Border>

        <TextBlock Text="Email:"
                   FontWeight="SemiBold" 
                   Margin="0, 10, 0, 0"/>
        <Border BorderThickness="0"
                CornerRadius="5"
                Background="#EEEEEE"
                HorizontalAlignment="Stretch"
                Margin="0, 10, 0, 0">
            <TextBox BorderThickness="0"
                     Background="Transparent"
                     Padding="8, 4"
                     Text="{Binding Email}"
                     VerticalContentAlignment="Center" />
        </Border>

        <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
            <TextBlock Text="Ngày lập: "
                       FontWeight="SemiBold" />
            <TextBlock Text="{Binding TodayDate}"
                       FontWeight="SemiBold" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" 
                    Margin="0, 20, 0, 0"
                    HorizontalAlignment="Center">
            <Button Content="Thêm"
                    Width="100"
                    Command="{Binding AddCommand}"
                    CommandParameter="{Binding ElementName=Window}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="0, 0, 10, 0" />
            <Button Content="Hủy"
                    Width="100"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding ElementName=Window}"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="10, 0, 0, 0" />
        </StackPanel>
    </StackPanel>
</Window>
