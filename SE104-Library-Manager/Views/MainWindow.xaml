<Window x:Class="SE104_Library_Manager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SE104_Library_Manager.Views"
        xmlns:viewmodel="clr-namespace:SE104_Library_Manager.ViewModels"
        mc:Ignorable="d"
        Title="Quản lý thư viện" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar width -->
            <ColumnDefinition Width="*"/>
            <!-- Content area -->
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#161F3A">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!-- Library Title -->
                <TextBlock Grid.Row="0" Text="LIBRARY" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,20,0,30"/>

                <!-- Menu Buttons -->
                <StackPanel Grid.Row="1">
                    <!--Tài khoản-->
                    <RadioButton Height="65"
                                 FontSize="30"
                                 Style="{StaticResource MenuButtonTheme}"                             
                                 Command="{Binding NavigateCommand}"
                                 CommandParameter="Account"
                                 Content="Trang chủ"
                                 Cursor="Hand"
                                 IsChecked="True">
                        <RadioButton.Tag>
                            <BitmapImage UriSource="/Assets/icon_user.png" />
                        </RadioButton.Tag>
                    </RadioButton>
                    <!--Sách-->
                    <RadioButton Height="65"
                                 FontSize="30"
                                 Style="{StaticResource MenuButtonTheme}"                             
                                 Command="{Binding NavigateCommand}"
                                 CommandParameter="Book"
                                 Content="Sách"
                                 Cursor="Hand">
                        <RadioButton.Tag>
                            <BitmapImage UriSource="/Assets/icon_book.png" />
                        </RadioButton.Tag>
                    </RadioButton>
                    <!--Độc giả-->
                    <RadioButton Height="65"
                                 FontSize="30"
                                 Style="{StaticResource MenuButtonTheme}"                             
                                 Command="{Binding NavigateCommand}"
                                 CommandParameter="Reader"
                                 Content="Độc giả"
                                 Cursor="Hand">
                        <RadioButton.Tag>
                            <BitmapImage UriSource="/Assets/icon_reader.png" />
                        </RadioButton.Tag>
                    </RadioButton>
                    <!--Nhân viên-->
                    <RadioButton Height="65"
                                 FontSize="30"
                                 Style="{StaticResource MenuButtonTheme}"                             
                                 Command="{Binding NavigateCommand}"
                                 CommandParameter="Staff"
                                 Content="Nhân viên"
                                 Cursor="Hand">
                        <RadioButton.Tag>
                            <BitmapImage UriSource="/Assets/icon_staff.png" />
                        </RadioButton.Tag>
                    </RadioButton>
                    <!--Mượn sách-->
                    <RadioButton Height="65"
                                 FontSize="30"
                                 Style="{StaticResource MenuButtonTheme}"                             
                                 Command="{Binding NavigateCommand}"
                                 CommandParameter="Borrow"
                                 Content="Mượn trả"
                                 Cursor="Hand">
                        <RadioButton.Tag>
                            <BitmapImage UriSource="/Assets/icon_borrow.png" />
                        </RadioButton.Tag>
                    </RadioButton>
                    <!--Trả sách-->
                    <RadioButton Height="65"
                                 FontSize="30"
                                 Style="{StaticResource MenuButtonTheme}"                             
                                 Command="{Binding NavigateCommand}"
                                 CommandParameter="Return"
                                 Content="Trả sách"
                                 Cursor="Hand">
                        <RadioButton.Tag>
                            <BitmapImage UriSource="/Assets/icon_return.png" />
                        </RadioButton.Tag>
                    </RadioButton>
                    <!--Thống kê-->
                    <RadioButton Height="65"
                                 FontSize="30"
                                 Style="{StaticResource MenuButtonTheme}"                             
                                 Command="{Binding NavigateCommand}"
                                 CommandParameter="Statistic"
                                 Content="Thống kê"
                                 Cursor="Hand">
                        <RadioButton.Tag>
                            <BitmapImage UriSource="/Assets/icon_statistic.png" />
                        </RadioButton.Tag>
                    </RadioButton>
                    <!--Quy định-->
                    <RadioButton Height="65"
                                 FontSize="30"
                                 Style="{StaticResource MenuButtonTheme}"                             
                                 Command="{Binding NavigateCommand}"
                                 CommandParameter="Policy"
                                 Content="Quy định"
                                 Cursor="Hand">
                        <RadioButton.Tag>
                            <BitmapImage UriSource="/Assets/icon_policy.png" />
                        </RadioButton.Tag>
                    </RadioButton>
                </StackPanel>
                
                <!--Logout-->
                <Button Grid.Row="2" Height="65"
                        FontSize="30"                             
                        Command="{Binding LogoutCommand}"
                        Cursor="Hand"
                        Style="{StaticResource LogoutButtonStyle}">
                    <StackPanel Orientation="Horizontal" >
                        <Image Source="/Assets/icon_logout.png" Width="30" Height="30" Margin="10,0,5,0"/>
                        <TextBlock Text="Đăng xuất" 
                                   FontSize="22" 
                                   Margin="15,0,0,0" 
                                   FontWeight="Medium"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
        <!-- Content Area -->
        <Border Grid.Column="1" Background="White">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>
    </Grid>
</Window>
