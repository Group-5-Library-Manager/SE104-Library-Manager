<UserControl x:Class="SE104_Library_Manager.Views.StaffView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SE104_Library_Manager.Views"
             xmlns:converters="clr-namespace:SE104_Library_Manager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <UserControl.Resources>
        <converters:PrefixConverter x:Key="PrefixConverter" />
        <converters:DateOnlyConverter x:Key="DateOnlyConverter" />
        <converters:DateOnlyFormattedConverter x:Key="DateOnlyFormattedConverter" />
        <converters:PasswordsToTupleConverter x:Key="PasswordsToTupleConverter" />
    </UserControl.Resources>

    <Grid Margin="20">
        <TabControl SelectedItem="{Binding SelectedTab, UpdateSourceTrigger=PropertyChanged}">
            <TabItem IsSelected="True" Header="Nhân viên">
                <Grid Margin="0. 20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border BorderThickness="1"
                            BorderBrush="Black"
                            Padding="20"
                            Grid.Row="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Vertical" Grid.Column="0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Mã nhân viên: "
                                           FontWeight="SemiBold" />
                                    <TextBlock Text="{Binding SelectedStaffForEdit.MaNhanVien, Converter={StaticResource PrefixConverter}, ConverterParameter=NV}"
                                           FontWeight="SemiBold" />
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                                    <TextBlock Text="Tên nhân viên: "
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                    <Border BorderThickness="0"
                                        CornerRadius="5"
                                        Background="#EEEEEE"
                                        Width="210">
                                        <TextBox BorderThickness="0"
                                                 Background="Transparent"
                                                 Text="{Binding SelectedStaffForEdit.TenNhanVien}"
                                                 Padding="8, 4"
                                                 VerticalContentAlignment="Center" />
                                    </Border>

                                    <TextBlock Text="Ngày sinh: "
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="20, 0, 0, 0"/>
                                    <DatePicker Width="140"
                                                SelectedDate="{Binding SelectedStaffForEditBirthday}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                                    <TextBlock Text="Điện thoại: "
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center" />
                                    <Border BorderThickness="0"
                                            CornerRadius="5"
                                            Background="#EEEEEE"
                                            Width="125">
                                        <TextBox Background="Transparent"
                                                 BorderThickness="0"
                                                 Text="{Binding SelectedStaffForEdit.DienThoai}"
                                                 Padding="8, 4"
                                                 VerticalContentAlignment="Center"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                                    <TextBlock Text="Địa chỉ: "
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center" />
                                    <Border BorderThickness="0"
                                            CornerRadius="5"
                                            Background="#EEEEEE"
                                            Width="400">
                                        <TextBox Background="Transparent"
                                                 BorderThickness="0" 
                                                 Text="{Binding SelectedStaffForEdit.DiaChi}"
                                                 Padding="8, 4"
                                                 VerticalContentAlignment="Center"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                                    <TextBlock Text="Chức vụ: "
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center" />
                                    <Border BorderThickness="0"
                                            CornerRadius="5"
                                            Background="#EEEEEE"
                                            Padding="2"
                                            Width="200">
                                        <ComboBox BorderThickness="0"
                                                  Padding="8,4"
                                                  VerticalContentAlignment="Center"
                                                  ItemsSource="{Binding DsChucVu}"
                                                  SelectedValuePath="MaChucVu"
                                                  DisplayMemberPath="TenChucVu"
                                                  SelectedValue="{Binding SelectedStaffForEdit.MaChucVu}"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                                    <TextBlock Text="Bộ phận: "
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center" />
                                    <Border BorderThickness="0"
                                            CornerRadius="5"
                                            Background="#EEEEEE"
                                            Padding="2"
                                            Width="200">
                                        <ComboBox BorderThickness="0"
                                                  Padding="8,4"
                                                  VerticalContentAlignment="Center"
                                                  ItemsSource="{Binding DsBoPhan}"
                                                  SelectedValuePath="MaBoPhan"
                                                  DisplayMemberPath="TenBoPhan"
                                                  SelectedValue="{Binding SelectedStaffForEdit.MaBoPhan}"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                                    <TextBlock Text="Bằng cấp: "
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center" />
                                    <Border BorderThickness="0"
                                            CornerRadius="5"
                                            Background="#EEEEEE"
                                            Padding="2"
                                            Width="200">
                                        <ComboBox BorderThickness="0"
                                                  Padding="8,4"
                                                  VerticalContentAlignment="Center"
                                                  ItemsSource="{Binding DsBangCap}"
                                                  SelectedValuePath="MaBangCap"
                                                  DisplayMemberPath="TenBangCap"
                                                  SelectedValue="{Binding SelectedStaffForEdit.MaBangCap}"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal"
                                            Margin="0, 40, 0, 0">
                                    <Button Content="Cập nhật"
                                            Command="{Binding EditStaffCommand}"
                                            Width="150"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Margin="0, 0, 20, 0"/>
                                    <Button Content="Xóa"
                                            Command="{Binding DeleteStaffCommand}"
                                            Width="150"
                                            Style="{StaticResource SecondaryButtonStyle}"
                                            Margin="20, 0, 0, 0"/>
                                </StackPanel>
                            </StackPanel>

                            <Border Grid.Column="1"
                                    Width="1"
                                    Background="Black"
                                    Margin="10, 0, 10, 0"
                                    VerticalAlignment="Stretch"/>

                            <StackPanel Orientation="Vertical" Grid.Column="2">
                                <GroupBox Header="Thông tin tài khoản"
                                          FontWeight="SemiBold"
                                          Width="300"
                                          Padding="10">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="Tên đăng nhập: "
                                                    FontWeight="SemiBold"
                                                    VerticalAlignment="Center"/>
                                        <Border BorderThickness="0"
                                                CornerRadius="5"
                                                Background="#EEEEEE">
                                            <TextBox BorderThickness="0"
                                                     Background="Transparent"
                                                     Padding="8, 4"
                                                     FontWeight="Normal"
                                                     Text="{Binding SelectedAccountForEdit.TenDangNhap}"
                                                     VerticalContentAlignment="Center" />
                                        </Border>

                                        <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                                            <TextBlock Text="Vai trò: "
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding SelectedAccountForEdit.VaiTro.TenVaiTro}"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center" />
                                        </StackPanel>

                                        <Button Content="Cập nhật thông tin tài khoản"
                                                Command="{Binding EditAccountCommand}"
                                                Margin="0, 10, 0, 0"
                                                Style="{StaticResource PrimaryButtonStyle}" />

                                    </StackPanel>
                                </GroupBox>
                                
                                <GroupBox Header="Đặt lại mật khẩu"
                                          Margin="0, 10, 0, 0"
                                          FontWeight="SemiBold"
                                          Width="300"
                                          Padding="5">
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Vertical" Margin="0, 10, 0, 0">
                                            <TextBlock Text="Mật khẩu: "
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                            <Border BorderThickness="0"
                                                    CornerRadius="5"
                                                    Background="#EEEEEE">
                                                <PasswordBox x:Name="newPassword"
                                                             BorderThickness="0"
                                                             Background="Transparent"
                                                             Padding="8, 4"
                                                             VerticalContentAlignment="Center" />
                                            </Border>
                                        </StackPanel>

                                        <StackPanel Orientation="Vertical" Margin="0, 10, 0, 0">
                                            <TextBlock Text="Xác nhận mật khẩu: "
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"/>
                                            <Border BorderThickness="0"
                                                    CornerRadius="5"
                                                    Background="#EEEEEE">
                                                <PasswordBox x:Name="confirmPassword"
                                                             BorderThickness="0"
                                                             Background="Transparent"
                                                             Padding="8, 4"
                                                             VerticalContentAlignment="Center" />
                                            </Border>
                                        </StackPanel>

                                        <Button Content="Đặt lại mật khẩu"
                                                Command="{Binding ResetAccountPasswordCommand}"
                                                Style="{StaticResource PrimaryButtonStyle}"
                                                Margin="0, 10, 0, 0">
                                            <Button.CommandParameter>
                                                <MultiBinding Converter="{StaticResource PasswordsToTupleConverter}">
                                                    <Binding ElementName="newPassword" />
                                                    <Binding ElementName="confirmPassword" />
                                                    <Binding Source="{x:Null}" />
                                                </MultiBinding>
                                            </Button.CommandParameter>
                                        </Button>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border BorderThickness="0"
                            CornerRadius="10"
                            Margin="0, 40, 0, 0"
                            Padding="20"
                            Grid.Row="1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FF536FB5" Offset="0"/>
                                <GradientStop Color="#FF24304F" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Row="0">
                                <Border BorderThickness="0"
                                        CornerRadius="15"
                                        Background="White"
                                        Height="40"
                                        Width="350"
                                        Padding="10, 0, 10, 0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <Grid>
                                                <TextBox x:Name="SearchNhanVien" 
                                                         VerticalAlignment="Center" 
                                                         HorizontalAlignment="Stretch" 
                                                         Text="{Binding SearchStaffQuery, UpdateSourceTrigger=PropertyChanged}"
                                                         Margin="5"
                                                         Padding="5,0"
                                                         BorderThickness="0"
                                                         VerticalContentAlignment="Center" />
                                                <TextBlock Text="Tìm kiếm"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Center"
                                                           Margin="15,0,0,0"
                                                           Foreground="DarkGray"
                                                           HorizontalAlignment="Left">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, ElementName=SearchNhanVien}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </Grid>
                                        <Button Grid.Column="1" Command="{Binding SearchStaffCommand}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <Ellipse x:Name="ellipse"
                                                                 Width="40"
                                                                 Height="40"
                                                                 Fill="Transparent"
                                                                 Stroke="Transparent"
                                                                 StrokeThickness="0" />

                                                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                    </Grid>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ellipse" Property="Fill" Value="#EEE" />
                                                        </Trigger>

                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="ellipse" Property="Fill" Value="#CCC" />
                                                        </Trigger>

                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="ellipse" Property="Opacity" Value="0.5" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>

                                            <Image Source="/Assets/icon_search.png" Stretch="Uniform" Width="30" Height="30" />
                                        </Button>

                                    </Grid>
                                </Border>

                                <Button Content="Thêm nhân viên"
                                        Command="{Binding AddStaffCommand}"
                                        Margin="40, 0, 0, 0"
                                        Style="{StaticResource AddButtonDarkIconStyle}" />
                            </StackPanel>


                            <Grid Background="White"
                                    Grid.Row="1"
                                    Margin="0, 40, 0, 0">
                                <DataGrid SelectionMode="Single"
                                          AutoGenerateColumns="False"
                                          Background="Transparent"
                                          CanUserReorderColumns="False"
                                          CanUserResizeRows="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          BorderThickness="0"
                                          IsReadOnly="True"
                                          HeadersVisibility="Column"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"
                                          ItemsSource="{Binding DsNhanVien}"
                                          SelectedItem="{Binding SelectedStaff}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Mã nhân viên" Width="*" Binding="{Binding MaNhanVien, Converter={StaticResource PrefixConverter}, ConverterParameter=NV}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Tên nhân viên" Width="*" Binding="{Binding TenNhanVien}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Địa chỉ" Width="*" Binding="{Binding DiaChi}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Điện thoại" Width="*" Binding="{Binding DienThoai}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Ngày sinh" Width="*" Binding="{Binding NgaySinh, Converter={StaticResource DateOnlyFormattedConverter}}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Chức vụ" Width="*" Binding="{Binding ChucVu.TenChucVu}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Bộ phận" Width="*" Binding="{Binding BoPhan.TenBoPhan}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                        </DataGridTextColumn>

                                        <DataGridTextColumn Header="Bằng cấp" Width="*" Binding="{Binding BangCap.TenBangCap}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Chức vụ">
                <Grid Margin="0. 20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border BorderThickness="1"
                            BorderBrush="Black"
                            Padding="20"
                            Grid.Row="0">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Mã chức vụ: "
                                           FontWeight="SemiBold" />
                                <TextBlock Text="{Binding SelectedPositionForEdit.MaChucVu, Converter={StaticResource PrefixConverter}, ConverterParameter=CV}"
                                           FontWeight="SemiBold" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                                <TextBlock Text="Tên chức vụ: "
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <Border BorderThickness="0"
                                        CornerRadius="5"
                                        Background="#EEEEEE"
                                        Width="250">
                                    <TextBox BorderThickness="0"
                                             Background="Transparent"
                                             Text="{Binding SelectedPositionForEdit.TenChucVu}"
                                             Padding="8, 4"
                                             VerticalContentAlignment="Center" />
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        Margin="0, 40, 0, 0">
                                <Button Content="Cập nhật"
                                        Command="{Binding EditPositionCommand}"
                                        Width="150"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="0, 0, 20, 0"/>
                                <Button Content="Xóa"
                                        Command="{Binding DeletePositionCommand}"
                                        Width="150"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Margin="20, 0, 0, 0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border BorderThickness="0"
                            CornerRadius="10"
                            Margin="0, 40, 0, 0"
                            Padding="20"
                            Grid.Row="1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FF536FB5" Offset="0"/>
                                <GradientStop Color="#FF24304F" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Row="0">
                                <Border BorderThickness="0"
                                        CornerRadius="15"
                                        Background="White"
                                        Height="40"
                                        Width="350"
                                        Padding="10, 0, 10, 0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <Grid>
                                                <TextBox x:Name="SearchChucVu" 
                                                         VerticalAlignment="Center" 
                                                         HorizontalAlignment="Stretch"
                                                         Text="{Binding SearchPositionQuery, UpdateSourceTrigger=PropertyChanged}"
                                                         Margin="5"
                                                         Padding="5,0"
                                                         BorderThickness="0"
                                                         VerticalContentAlignment="Center" />
                                                <TextBlock Text="Tìm kiếm"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Center"
                                                           Margin="15,0,0,0"
                                                           Foreground="DarkGray"
                                                           HorizontalAlignment="Left">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, ElementName=SearchChucVu}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </Grid>
                                        <Button Grid.Column="1" Command="{Binding SearchPositionCommand}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <Ellipse x:Name="ellipse"
                                                                 Width="40"
                                                                 Height="40"
                                                                 Fill="Transparent"
                                                                 Stroke="Transparent"
                                                                 StrokeThickness="0" />

                                                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                    </Grid>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ellipse" Property="Fill" Value="#EEE" />
                                                        </Trigger>

                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="ellipse" Property="Fill" Value="#CCC" />
                                                        </Trigger>

                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="ellipse" Property="Opacity" Value="0.5" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>

                                            <Image Source="/Assets/icon_search.png" Stretch="Uniform" Width="30" Height="30" />
                                        </Button>

                                    </Grid>
                                </Border>

                                <Button Content="Thêm chức vụ"
                                        Command="{Binding AddPositionCommand}"
                                        Margin="40, 0, 0, 0"
                                        Style="{StaticResource AddButtonDarkIconStyle}" />
                            </StackPanel>


                            <Grid Background="White"
                                    Grid.Row="1"
                                    Margin="0, 40, 0, 0">
                                <DataGrid SelectionMode="Single"
                                          AutoGenerateColumns="False"
                                          Background="Transparent"
                                          CanUserReorderColumns="False"
                                          CanUserResizeRows="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          BorderThickness="0"
                                          IsReadOnly="True"
                                          HeadersVisibility="Column"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"
                                          ItemsSource="{Binding DsChucVu}"
                                          SelectedItem="{Binding SelectedPosition}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Mã chức vụ" Width="*" Binding="{Binding MaChucVu, Converter={StaticResource PrefixConverter}, ConverterParameter=CV}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Tên chức vụ" Width="*" Binding="{Binding TenChucVu}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Bộ phận">
                <Grid Margin="0. 20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border BorderThickness="1"
                            BorderBrush="Black"
                            Padding="20"
                            Grid.Row="0">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Mã bộ phận: "
                                           FontWeight="SemiBold" />
                                <TextBlock Text="{Binding SelectedDepartmentForEdit.MaBoPhan, Converter={StaticResource PrefixConverter}, ConverterParameter=BP}"
                                           FontWeight="SemiBold" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                                <TextBlock Text="Tên bộ phận: "
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <Border BorderThickness="0"
                                        CornerRadius="5"
                                        Background="#EEEEEE"
                                        Width="250">
                                    <TextBox BorderThickness="0"
                                             Background="Transparent"
                                             Text="{Binding SelectedDepartmentForEdit.TenBoPhan}"
                                             Padding="8, 4"
                                             VerticalContentAlignment="Center" />
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        Margin="0, 40, 0, 0">
                                <Button Content="Cập nhật"
                                        Command="{Binding EditDepartmentCommand}"
                                        Width="150"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="0, 0, 20, 0"/>
                                <Button Content="Xóa"
                                        Command="{Binding DeleteDepartmentCommand}"
                                        Width="150"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Margin="20, 0, 0, 0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border BorderThickness="0"
                            CornerRadius="10"
                            Margin="0, 40, 0, 0"
                            Padding="20"
                            Grid.Row="1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FF536FB5" Offset="0"/>
                                <GradientStop Color="#FF24304F" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Row="0">
                                <Border BorderThickness="0"
                                        CornerRadius="15"
                                        Background="White"
                                        Height="40"
                                        Width="350"
                                        Padding="10, 0, 10, 0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <Grid>
                                                <TextBox x:Name="SearchBoPhan" 
                                                         VerticalAlignment="Center" 
                                                         HorizontalAlignment="Stretch" 
                                                         Margin="5"
                                                         Padding="5,0"
                                                         Text="{Binding SearchDepartmentQuery, UpdateSourceTrigger=PropertyChanged}"
                                                         BorderThickness="0"
                                                         VerticalContentAlignment="Center" />
                                                <TextBlock Text="Tìm kiếm"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Center"
                                                           Margin="15,0,0,0"
                                                           Foreground="DarkGray"
                                                           HorizontalAlignment="Left">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, ElementName=SearchBoPhan}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </Grid>
                                        <Button Grid.Column="1" Command="{Binding SearchDepartmentCommand}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <Ellipse x:Name="ellipse"
                                                                 Width="40"
                                                                 Height="40"
                                                                 Fill="Transparent"
                                                                 Stroke="Transparent"
                                                                 StrokeThickness="0" />

                                                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                    </Grid>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ellipse" Property="Fill" Value="#EEE" />
                                                        </Trigger>

                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="ellipse" Property="Fill" Value="#CCC" />
                                                        </Trigger>

                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="ellipse" Property="Opacity" Value="0.5" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>

                                            <Image Source="/Assets/icon_search.png" Stretch="Uniform" Width="30" Height="30" />
                                        </Button>

                                    </Grid>
                                </Border>

                                <Button Content="Thêm bộ phận"
                                        Command="{Binding AddDepartmentCommand}"
                                        Margin="40, 0, 0, 0"
                                        Style="{StaticResource AddButtonDarkIconStyle}" />
                            </StackPanel>


                            <Grid Background="White"
                                    Grid.Row="1"
                                    Margin="0, 40, 0, 0">
                                <DataGrid SelectionMode="Single"
                                          AutoGenerateColumns="False"
                                          Background="Transparent"
                                          CanUserReorderColumns="False"
                                          CanUserResizeRows="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          BorderThickness="0"
                                          IsReadOnly="True"
                                          HeadersVisibility="Column"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"
                                          ItemsSource="{Binding DsBoPhan}"
                                          SelectedItem="{Binding SelectedDepartment}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Mã bộ phận" Width="*" Binding="{Binding MaBoPhan, Converter={StaticResource PrefixConverter}, ConverterParameter=BP}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Tên bộ phận" Width="*" Binding="{Binding TenBoPhan}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Bằng cấp">
                <Grid Margin="0. 20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border BorderThickness="1"
                            BorderBrush="Black"
                            Padding="20"
                            Grid.Row="0">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Mã bằng cấp: "
                                           FontWeight="SemiBold" />
                                <TextBlock Text="{Binding SelectedDegreeForEdit.MaBangCap, Converter={StaticResource PrefixConverter}, ConverterParameter=BC}"
                                           FontWeight="SemiBold" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0, 10, 0, 0">
                                <TextBlock Text="Tên bằng cấp: "
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"/>
                                <Border BorderThickness="0"
                                        CornerRadius="5"
                                        Background="#EEEEEE"
                                        Width="250">
                                    <TextBox BorderThickness="0"
                                             Background="Transparent"
                                             Text="{Binding SelectedDegreeForEdit.TenBangCap}"
                                             Padding="8, 4"
                                             VerticalContentAlignment="Center" />
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        Margin="0, 40, 0, 0">
                                <Button Content="Cập nhật"
                                        Command="{Binding EditDegreeCommand}"
                                        Width="150"
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Margin="0, 0, 20, 0"/>
                                <Button Content="Xóa"
                                        Command="{Binding DeleteDegreeCommand}"
                                        Width="150"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Margin="20, 0, 0, 0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border BorderThickness="0"
                            CornerRadius="10"
                            Margin="0, 40, 0, 0"
                            Padding="20"
                            Grid.Row="1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FF536FB5" Offset="0"/>
                                <GradientStop Color="#FF24304F" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <StackPanel Orientation="Horizontal" Grid.Row="0">
                                <Border BorderThickness="0"
                                        CornerRadius="15"
                                        Background="White"
                                        Height="40"
                                        Width="350"
                                        Padding="10, 0, 10, 0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <Grid>
                                                <TextBox x:Name="SearchBangCap" 
                                                         VerticalAlignment="Center" 
                                                         HorizontalAlignment="Stretch" 
                                                         Margin="5"
                                                         Padding="5,0"
                                                         Text="{Binding SearchDegreeQuery, UpdateSourceTrigger=PropertyChanged}"
                                                         BorderThickness="0"
                                                         VerticalContentAlignment="Center" />
                                                <TextBlock Text="Tìm kiếm"
                                                           IsHitTestVisible="False"
                                                           VerticalAlignment="Center"
                                                           Margin="15,0,0,0"
                                                           Foreground="DarkGray"
                                                           HorizontalAlignment="Left">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, ElementName=SearchBangCap}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </Grid>
                                        <Button Grid.Column="1" Command="{Binding SearchDegreeCommand}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid>
                                                        <Ellipse x:Name="ellipse"
                                                                 Width="40"
                                                                 Height="40"
                                                                 Fill="Transparent"
                                                                 Stroke="Transparent"
                                                                 StrokeThickness="0" />

                                                        <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                    </Grid>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="ellipse" Property="Fill" Value="#EEE" />
                                                        </Trigger>

                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="ellipse" Property="Fill" Value="#CCC" />
                                                        </Trigger>

                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="ellipse" Property="Opacity" Value="0.5" />
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>

                                            <Image Source="/Assets/icon_search.png" Stretch="Uniform" Width="30" Height="30" />
                                        </Button>

                                    </Grid>
                                </Border>

                                <Button Content="Thêm bằng cấp"
                                        Command="{Binding AddDegreeCommand}"
                                        Margin="40, 0, 0, 0"
                                        Style="{StaticResource AddButtonDarkIconStyle}" />
                            </StackPanel>


                            <Grid Background="White"
                                    Grid.Row="1"
                                    Margin="0, 40, 0, 0">
                                <DataGrid SelectionMode="Single"
                                          AutoGenerateColumns="False"
                                          Background="Transparent"
                                          CanUserReorderColumns="False"
                                          CanUserResizeRows="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          BorderThickness="0"
                                          IsReadOnly="True"
                                          HeadersVisibility="Column"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"
                                          ItemsSource="{Binding DsBangCap}"
                                          SelectedItem="{Binding SelectedDegree}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Mã bằng cấp" Width="*" Binding="{Binding MaBangCap, Converter={StaticResource PrefixConverter}, ConverterParameter=BC}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Tên bằng cấp" Width="*" Binding="{Binding TenBangCap}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>

</UserControl>
