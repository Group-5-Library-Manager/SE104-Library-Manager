<UserControl x:Class="SE104_Library_Manager.Views.Statistic.BorrowingStatisticView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SE104_Library_Manager.Views.Statistic"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0 20 0 0">
        <!-- Date Range Selection -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Date Filter Section -->
        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1"
                Padding="20" Margin="0,0,0,15" CornerRadius="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Từ ngày:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Medium"/>
                <DatePicker x:Name="FromDatePicker" 
                            SelectedDate="{Binding FromDate}"
                            HorizontalAlignment="Stretch"
                            Margin="0 0 20 0" Width="120"
                            Language="vi-VN"/>

                <TextBlock Text="Đến ngày:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Medium"/>
                <DatePicker x:Name="ToDatePicker" 
                            SelectedDate="{Binding ToDate}" 
                            Margin="0 0 20 0" Width="120"
                            HorizontalAlignment="Stretch"
                            Language="vi-VN"/>

                <Button Content="Thống kê" 
                        Command="{Binding LoadStatisticCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"/>
            </StackPanel>
        </Border>
        
        <!-- Statistics Table -->
        <!-- Late Return Statistics Table -->
        <Border BorderThickness="0"
                CornerRadius="10"
                Margin="0 10 0 0"
                Padding="20"
                Grid.Row="1">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#FF536FB5" Offset="0"/>
                    <GradientStop Color="#FF24304F" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!--Tổng số lượt mượn-->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Tổng số lượt mượn: "
                               FontWeight="SemiBold" FontSize="14"
                               Foreground="White"/>
                    <TextBlock Text="{Binding TotalBorrows}" FontWeight="SemiBold"
                               FontSize="14" Margin="10 0 0 0"
                               Foreground="White"/>
                </StackPanel>

                <Grid Grid.Row="1" Background="White">
                    <DataGrid SelectionMode="Single"
                            AutoGenerateColumns="False"
                            Background="Transparent"
                            CanUserReorderColumns="False"
                            CanUserResizeRows="False"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False"
                            BorderThickness="0"
                            IsReadOnly="True"
                            HeadersVisibility="Column"
                            HorizontalScrollBarVisibility="Hidden"
                            VerticalScrollBarVisibility="Hidden"
                            ItemsSource="{Binding BorrowingItems}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="STT" Width="*" Binding="{Binding Index}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Tên thể loại" Width="*" Binding="{Binding GenreName}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Số lượt mượn" Width="*" Binding="{Binding BorrowCount}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Tỉ lệ" Width="150" Binding="{Binding FormattedPercentage}">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
